= form_for [:admin, @user] do |f|
  = render 'errors', object: f.object
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
 

  .actions
    = f.submit 'Save'
    = f.submit 'Cancel', class: 'cancel_button'
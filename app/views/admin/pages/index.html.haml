= content_for :page_actions do
  = link_to 'Compose Page', new_admin_page_path

= render 'index', object: @pages, columns: [:name] do |page|
  = link_to 'View', (page.home? ? root_url : page)
  = link_to 'Edit', [:edit, :admin, page]
  - unless page.protected?
    = link_to 'Delete', [:admin, page], method: :delete, data: {confirm: 'This cannot be undone, are you sure you want to delete this?'}
